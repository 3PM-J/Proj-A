<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="upeu.edu.pe.registroa.controller.PacienteController">
   <top>
      <VBox>
         <children>
            <Label text="Sistema de Registro de Pacientes" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" top="20.0" />
               </VBox.margin>
            </Label>
            <!-- Barra de búsqueda -->
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Buscar:" />
                  <TextField fx:id="txtBuscar" prefWidth="300.0" promptText="Buscar por nombre, apellido, DNI o email..." />
                  <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#handleBuscar" style="-fx-background-color: #607D8B; -fx-text-fill: white;" text="Buscar" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox spacing="10.0">
         <children>
            <!-- Formulario de entrada -->
            <TitledPane collapsible="false" text="Datos del Paciente">
               <content>
                  <GridPane hgap="10.0" vgap="10.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Nombres: *" />
                        <TextField fx:id="txtNombres" promptText="Ingrese los nombres" GridPane.columnIndex="1" />
                        <Label text="Apellidos: *" GridPane.columnIndex="2" />
                        <TextField fx:id="txtApellidos" promptText="Ingrese los apellidos" GridPane.columnIndex="3" />
                        
                        <Label text="DNI: *" GridPane.rowIndex="1" />
                        <TextField fx:id="txtDni" promptText="12345678" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Fecha Nacimiento: *" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <DatePicker fx:id="dpFechaNacimiento" promptText="Seleccione fecha" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                        
                        <Label text="Teléfono:" GridPane.rowIndex="2" />
                        <TextField fx:id="txtTelefono" promptText="987654321" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Email:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <TextField fx:id="txtEmail" promptText="ejemplo@correo.com" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                        
                        <Label text="Dirección:" GridPane.rowIndex="3" />
                        <TextField fx:id="txtDireccion" promptText="Ingrese la dirección" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />
                        <Label text="Género: *" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                        <ComboBox fx:id="cbGenero" prefWidth="150.0" promptText="Seleccione género" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                        
                        <!-- Botones -->
                        <HBox alignment="CENTER" spacing="10.0" GridPane.columnSpan="4" GridPane.rowIndex="4">
                           <children>
                              <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#handleGuardar" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Guardar" />
                              <Button fx:id="btnActualizar" disable="true" mnemonicParsing="false" onAction="#handleActualizar" prefWidth="100.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" text="Actualizar" />
                              <Button fx:id="btnEliminar" disable="true" mnemonicParsing="false" onAction="#handleEliminar" prefWidth="100.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" text="Eliminar" />
                              <Button fx:id="btnLimpiar" mnemonicParsing="false" onAction="#handleLimpiar" prefWidth="100.0" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;" text="Limpiar" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
               </content>
            </TitledPane>
            
            <!-- Tabla de pacientes -->
            <TitledPane collapsible="false" text="Lista de Pacientes" VBox.vgrow="ALWAYS">
               <content>
                  <TableView fx:id="tablePacientes" prefHeight="350.0">
                     <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colNombres" prefWidth="120.0" text="Nombres" />
                        <TableColumn fx:id="colApellidos" prefWidth="120.0" text="Apellidos" />
                        <TableColumn fx:id="colDni" prefWidth="80.0" text="DNI" />
                        <TableColumn fx:id="colFechaNacimiento" prefWidth="120.0" text="Fecha Nac." />
                        <TableColumn fx:id="colTelefono" prefWidth="100.0" text="Teléfono" />
                        <TableColumn fx:id="colEmail" prefWidth="150.0" text="Email" />
                        <TableColumn fx:id="colGenero" prefWidth="80.0" text="Género" />
                     </columns>
                  </TableView>
               </content>
            </TitledPane>
            
            <!-- Información adicional -->
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label text="* Campos obligatorios" style="-fx-text-fill: #666666; -fx-font-style: italic;" />
                  <Label text="Doble clic en una fila para editar" style="-fx-text-fill: #666666; -fx-font-style: italic;" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>